{
  "compilerOptions": {
    "target": "ES2023",
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "outDir": "./dist/cjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
